{
	"name": "@sveltinio/media-content",
	"version": "0.3.4",
	"private": false,
	"packageManager": "pnpm@7.25.1",
	"type": "module",
	"description": "A collection of typed Svelte components to easily embed media contents in your pages.",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://components.sveltin.io",
	"keywords": [
		"svelte",
		"components",
		"embed",
		"media",
		"content",
		"oembed",
		"youtube",
		"youtube list",
		"youtube playlist",
		"facebook post",
		"facebook videos",
		"twitter",
		"tweet",
		"codepen",
		"stackblitz",
		"codesandbox",
		"vimeo",
		"slideshare"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/media-content"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"svelte": "^3.55.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.2",
		"@sveltejs/kit": "^1.2.4",
		"@sveltejs/package": "^1.0.2",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/jest": "^27.5.2",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"c8": "^7.12.0",
		"eslint": "^8.32.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "^20.0.3",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^7.8.3",
		"postcss-utils": "workspace:0.0.0",
		"publint": "^0.1.9",
		"rimraf": "^3.0.2",
		"svelte-check": "^3.0.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vitest": "^0.28.1"
	},
	"scripts": {
		"dev": "npm run demo",
		"demo": "svelte-kit sync && vite dev",
		"build": "pnpm clean && svelte-kit sync && svelte-package",
		"clean": "rimraf dist",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch --reporter=default",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir=. --check . && eslint .",
		"format": "prettier --plugin-search-dir=. --write ."
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./types.d.ts"
		},
		"./dist": "./index.js"
	}
}

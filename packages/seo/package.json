{
	"name": "@sveltinio/seo",
	"version": "0.1.7",
	"private": false,
	"type": "module",
	"description": "A collection of SEO related Svelte components for metatags, json-ld.",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://components.sveltin.io",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"seo",
		"jsonld",
		"schemaorg",
		"opengraph",
		"metatags"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/seo"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"svelte": "^3.55.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.1",
		"@sveltejs/package": "^1.0.1",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"c8": "^7.12.0",
		"cssnano": "^5.1.14",
		"eslint": "^8.30.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "latest",
		"micromatch": "^4.0.5",
		"postcss": "^8.4.20",
		"postcss-cli": "^10.1.0",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^7.8.3",
		"rimraf": "^3.0.2",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3",
		"vitest": "^0.25.8"
	},
	"scripts": {
		"dev": "npm run demo",
		"demo": "svelte-kit sync && vite dev",
		"build": "pnpm clean && svelte-kit sync && svelte-package",
		"clean": "rimraf dist",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir=. --check . && eslint .",
		"format": "prettier --plugin-search-dir=. --write ."
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./types.d.ts"
		},
		"./dist": "./index.js"
	}
}

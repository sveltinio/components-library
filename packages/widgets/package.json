{
	"name": "@sveltinio/widgets",
	"version": "0.6.1",
	"private": false,
	"packageManager": "pnpm@7.29.0",
	"type": "module",
	"description": "A collection of responsive, type-safe, accessible and configurable Svelte components for cards, pages navigation, TOC (Table of Contents), ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://components.sveltin.io",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"svelte components",
		"card",
		"responsive card",
		"pages navigator",
		"toc",
		"table of contents",
		"scroll to top button"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/widgets"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"svelte": "^3.56.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.11.0",
		"@sveltejs/package": "^1.0.2",
		"@sveltejs/vite-plugin-svelte": "^2.0.3",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/postcss-preset-env": "^7.7.0",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"axe-core": "^4.6.3",
		"c8": "^7.13.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.1.15",
		"eslint": "^8.36.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "^21.1.1",
		"pa11y": "^6.2.3",
		"pa11y-ci": "^3.0.1",
		"picocolors": "^1.0.0",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^7.8.3",
		"postcss-utils": "workspace:0.0.0",
		"publint": "^0.1.10",
		"rimraf": "^4.4.0",
		"stylelint": "^14.16.1",
		"stylelint-config-custom": "workspace:0.0.0",
		"svelte-check": "^3.1.4",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vitest": "^0.29.2"
	},
	"scripts": {
		"build": "pnpm clean && pnpm sync && pnpm build:css && svelte-package && pnpm postbuild",
		"build:css": "cross-env NODE_ENV=production node ./scripts/postcss-process.js",
		"check": "pnpm sync && svelte-check",
		"check:watch": "pnpm sync && svelte-check --watch",
		"clean": "rimraf dist",
		"dev": "pnpm sync && pnpm dev:css && vite dev",
		"dev:css": "cross-env NODE_ENV=development node ./scripts/postcss-process.js",
		"lint": "prettier --plugin-search-dir=. --check . && eslint .",
		"lint:styles": "stylelint \"**/styles.postcss\"",
		"format": "prettier --plugin-search-dir=. --write .",
		"minify": "cross-env NODE_ENV=production node ./scripts/css-minifier.js",
		"postbuild": "pnpm exec publint ./dist && pnpm minify",
		"sync": "svelte-kit sync",
		"test": "pnpm build && vitest run",
		"test:coverage": "pnpm build && vitest run --coverage",
		"test:watch": "pnpm build && vitest watch",
		"test:a11y": "rimraf a11y-results.json && pa11y-ci"
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"exports": {
		".": {
			"types": "./types.d.ts",
			"import": "./index.js"
		},
		"./dist": "./index.js"
	}
}

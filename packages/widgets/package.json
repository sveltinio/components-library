{
	"name": "@sveltinio/widgets",
	"version": "0.2.2",
	"private": false,
	"type": "module",
	"description": "A collection of responsive, fully configurable and ready-to-use Svelte components for pages navigation, TOC (Table of Contents), ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"pages navigator",
		"toc",
		"table of contents"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/widgets"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.90",
		"@sveltejs/kit": "1.0.0-next.572",
		"@sveltejs/package": "1.0.0-next.6",
		"@sveltejs/vite-plugin-svelte": "^1.4.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/postcss-preset-env": "^7.7.0",
		"@typescript-eslint/eslint-plugin": "^5.45.1",
		"@typescript-eslint/parser": "^5.45.1",
		"autoprefixer": "^10.4.13",
		"c8": "^7.12.0",
		"eslint": "^8.29.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "latest",
		"micromatch": "^4.0.5",
		"postcss": "^8.4.19",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^7.8.3",
		"postcss-simple-vars": "^7.0.1",
		"rimraf": "^3.0.2",
		"stylelint": "^14.16.0",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-standard": "^29.0.0",
		"svelte-check": "^2.10.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^3.2.5",
		"vitest": "latest"
	},
	"scripts": {
		"dev": "npm run demo",
		"demo": "svelte-kit sync && vite dev",
		"build": "pnpm clean && svelte-kit sync && svelte-package",
		"clean": "rimraf dist",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir=. --check . && eslint .",
		"format": "prettier --plugin-search-dir=. --write ."
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./types.d.ts"
		},
		"./dist": "./index.js"
	}
}

{
	"name": "@sveltinio/widgets",
	"version": "0.1.5",
	"private": false,
	"description": "A collection of styled Svelte components for page navigation, TOC, scroll to top, collapsible lists ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"toc",
		"table of contents",
		"scroll to top button"
	],
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"scripts": {
		"dev": "svelte-kit dev -p 3003",
		"test": "vitest --run",
		"test:watch": "vitest watch",
		"coverage": "vitest run --coverage",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync",
		"package": "npm run clean && svelte-kit package && npm run postpack",
		"clean": "rm -rf dist",
		"postpack": "rm -rf dist/__tests__",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .eslintignore ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.34",
		"@sveltejs/kit": "1.0.0-next.304",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.40",
		"@testing-library/jest-dom": "^5.16.3",
		"@testing-library/svelte": "^3.1.0",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"c8": "^7.11.0",
		"eslint": "^8.12.0",
		"micromatch": "^4.0.5",
		"svelte": "^3.46.5",
		"svelte-check": "^2.4.6",
		"svelte-preprocess": "^4.10.4",
		"svelte2tsx": "^0.5.6",
		"tslib": "^2.3.1",
		"typescript": "^4.6.3",
		"vite": "^2.9.1",
		"vitest": "^0.8.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/sveltin-components-library"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/sveltin-components-library/issues"
	},
	"type": "module"
}

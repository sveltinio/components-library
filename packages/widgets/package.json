{
	"name": "@sveltinio/widgets",
	"version": "0.1.7",
	"private": false,
	"type": "module",
	"description": "A collection of styled Svelte components for page navigation, TOC, scroll to top, collapsible lists ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"toc",
		"table of contents",
		"scroll to top button"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/widgets"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.80",
		"@sveltejs/kit": "1.0.0-next.505",
		"@sveltejs/package": "1.0.0-next.5",
		"@sveltejs/vite-plugin-svelte": "^1.0.8",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.1",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"c8": "^7.12.0",
		"eslint": "^8.24.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "latest",
		"micromatch": "^4.0.5",
		"rimraf": "^3.0.2",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.4",
		"vitest": "latest"
	},
	"scripts": {
		"demo": "svelte-kit sync && vite dev",
		"build": "pnpm clean && svelte-kit sync && svelte-package",
		"clean": "rimraf dist",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --plugin-search-dir=. --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --plugin-search-dir=. --write ."
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./types.d.ts"
		},
		"./dist": "./index.js"
	}
}

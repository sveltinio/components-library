{
	"name": "@sveltinio/widgets",
	"version": "0.1.7",
	"private": false,
	"description": "A collection of styled Svelte components for page navigation, TOC, scroll to top, collapsible lists ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"toc",
		"table of contents",
		"scroll to top button"
	],
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"scripts": {
		"dev": "svelte-kit sync && vite dev",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"build": "vite build",
		"preview": "vite preview",
		"package": "npm run clean && svelte-kit package && npm run postpack",
		"clean": "rimraf dist",
		"postpack": "rimraf dist/__tests__",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.71",
		"@sveltejs/kit": "1.0.0-next.476",
		"@sveltejs/package": "1.0.0-next.3",
		"@sveltejs/vite-plugin-svelte": "^1.0.5",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.1",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"c8": "^7.12.0",
		"eslint": "^8.23.0",
		"jsdom": "latest",
		"micromatch": "^4.0.5",
		"rimraf": "^3.0.2",
		"svelte": "^3.50.0",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.16",
		"tslib": "^2.4.0",
		"typescript": "^4.8.2",
		"vite": "^3.1.0",
		"vitest": "latest"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"type": "module"
}

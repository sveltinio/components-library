{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["*.svelte"],
			"options": {
				"bracketSameLine": false
			}
		},
		{
			"files": ["*.css", "*.postcss"],
			"options": {
				"useTabs": false,
				"singleQuote": false
			}
		}
	]
}

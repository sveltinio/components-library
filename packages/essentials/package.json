{
	"name": "@sveltinio/essentials",
	"version": "0.3.0",
	"private": false,
	"type": "module",
	"description": "A collection of essentials Svelte components like buttons, buttongroup, dropdown, toggle list, tabs, ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://components.sveltin.io",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"buttons",
		"buttongroup",
		"color viewer",
		"dropdown",
		"link",
		"external links",
		"scroll to top",
		"tabs",
		"togglelist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/essentials"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"@indaco/svelte-iconoir": "^3.1.0",
		"svelte": "^3.55.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.1",
		"@sveltejs/package": "^1.0.1",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/postcss-preset-env": "^7.7.0",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"c8": "^7.12.0",
		"cssnano": "^5.1.14",
		"eslint": "^8.30.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "^20.0.3",
		"micromatch": "^4.0.5",
		"postcss": "^8.4.20",
		"postcss-cli": "^10.1.0",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^7.8.3",
		"postcss-utils": "workspace:0.0.0",
		"rimraf": "^3.0.2",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.2",
		"vitest": "^0.26.2"
	},
	"scripts": {
		"build": "pnpm clean && svelte-kit sync && svelte-package",
		"build:css": "NODE_ENV=production node styles-builder.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "rimraf dist",
		"dev": "svelte-kit sync && pnpm dev:css && vite dev",
		"dev:css": "NODE_ENV=development node styles-builder.js",
		"lint": "prettier --plugin-search-dir=. --check . && eslint .",
		"lint:styles": "stylelint \"**/styles.postcss\"",
		"format": "prettier --plugin-search-dir=. --write .",
		"test": "svelte-kit sync && pnpm build:css &&  vitest run",
		"test:coverage": "svelte-kit sync && vitest run --coverage",
		"test:watch": "svelte-kit sync && vitest watch"
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./types.d.ts"
		},
		"./dist": "./index.js"
	}
}

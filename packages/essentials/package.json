{
	"name": "@sveltinio/essentials",
	"version": "0.2.1",
	"private": false,
	"type": "module",
	"description": "A collection of Svelte unstyled components to handle external links or images using AVIF, WEBP, embed YouTube videos ...",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://components.sveltin.io",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"modern images",
		"webp",
		"avif"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/essentials"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"@indaco/svelte-iconoir": "^2.6.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.72",
		"@sveltejs/kit": "1.0.0-next.480",
		"@sveltejs/package": "1.0.0-next.3",
		"@sveltejs/vite-plugin-svelte": "^1.0.5",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.1",
		"@typescript-eslint/eslint-plugin": "^5.37.0",
		"@typescript-eslint/parser": "^5.37.0",
		"c8": "^7.12.0",
		"eslint": "^8.23.1",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "^20.0.0",
		"micromatch": "^4.0.5",
		"rimraf": "^3.0.2",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.16",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.0",
		"vitest": "latest"
	},
	"scripts": {
		"demo": "svelte-kit sync && pnpm dev",
		"build": "npm run clean && svelte-kit sync && svelte-package",
		"clean": "rimraf dist",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		"./dist": "./index.js"
	}
}

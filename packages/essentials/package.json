{
	"name": "@sveltinio/essentials",
	"version": "0.4.0",
	"private": false,
	"type": "module",
	"description": "A collection of _essentials_ and fully configurable Svelte components.",
	"author": "dev <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://components.sveltin.io",
	"keywords": [
		"sveltekit",
		"svelte",
		"components",
		"buttons",
		"buttongroup",
		"color viewer",
		"dropdown",
		"link",
		"external links",
		"tabs",
		"togglelist",
		"collapse"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltinio/components-library",
		"directory": "packages/essentials"
	},
	"bugs": {
		"url": "https://github.com/sveltinio/components-library/issues"
	},
	"dependencies": {
		"svelte": "^3.55.0"
	},
	"devDependencies": {
		"@indaco/svelte-iconoir": "^3.1.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.1",
		"@sveltejs/package": "^1.0.1",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/postcss-preset-env": "^7.7.0",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"c8": "^7.12.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.1.14",
		"eslint": "^8.31.0",
		"eslint-config-custom": "workspace:0.0.0",
		"jsdom": "^20.0.3",
		"micromatch": "^4.0.5",
		"postcss": "^8.4.20",
		"postcss-cli": "^10.1.0",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^7.8.3",
		"postcss-utils": "workspace:0.0.0",
		"rimraf": "^3.0.2",
		"stylelint": "^14.16.1",
		"stylelint-config-custom": "workspace:0.0.0",
		"svelte-check": "^3.0.1",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3",
		"vitest": "^0.26.3"
	},
	"scripts": {
		"build": "pnpm clean && pnpm sync && pnpm build:css && svelte-package",
		"build:css": "cross-env NODE_ENV=production node styles-builder.js",
		"check": "pnpm sync && svelte-check",
		"check:watch": "pnpm sync && svelte-check --watch",
		"clean": "rimraf dist",
		"dev": "pnpm sync && pnpm dev:css && vite dev",
		"dev:css": "cross-env NODE_ENV=development node styles-builder.js",
		"lint": "prettier --plugin-search-dir=. --check . && eslint .",
		"lint:styles": "stylelint \"**/styles.postcss\"",
		"format": "prettier --plugin-search-dir=. --write .",
		"sync": "svelte-kit sync",
		"test": "pnpm sync && vitest run",
		"test:coverage": "pnpm sync && vitest run --coverage",
		"test:watch": "pnpm sync && vitest watch"
	},
	"types": "index.d.ts",
	"svelte": "index.js",
	"sideEffects": false,
	"publishConfig": {
		"directory": "dist"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"types": "./types.d.ts"
		},
		"./dist": "./index.js"
	}
}

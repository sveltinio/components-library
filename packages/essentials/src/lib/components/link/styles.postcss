@charset "UTF-8";

/* stylelint-disable declaration-empty-line-before */
@layer components {
  .sn-e-c-link {
    color: var(--color, var(--gray-12));
    text-decoration: var(--text-decoration, none);
    display: inline-flex;
    align-items: center;
    gap: var(--icon-gap, var(--size-1));

    &:hover {
      text-decoration: var(--text-decoration-hover, underline);
    }
  }
}

@charset "UTF-8";
/* stylelint-disable declaration-empty-line-before */

/*! CSS file minified in production */

@import url("../reset") screen;
@import url("./variables") screen;

.se__btn__main {
  & .btn__content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--_icon-gap);
  }
}

a:where(.se__btn.se__btn__main.btn) {
  text-decoration: var(--text-decoration);
}

:is(a, button):where(.se__btn.se__btn__main.btn) {
  display: inline-flex;
  align-items: center;
  padding-top: var(--_pt);
  padding-right: var(--_pr);
  padding-bottom: var(--_pb);
  padding-left: var(--_pl);
  cursor: var(--_cursor);
  font-size: var(--_font-size);
  font-weight: var(--_font-weight);
  line-height: var(--_line-height);
  letter-spacing: var(--_letter-spacing);
  text-decoration: var(--_text-decoration);
  color: var(--_color);
  border-width: var(--_border-width);
  border-color: var(--_border-color);
  background-color: var(--_bg-color);
  outline-color: none;

  &:hover {
    background-color: var(--_bg-color-hover);
  }
}

.btn--focus:focus:where(.se__btn.se__btn__main.btn) {
  outline-width: var(--_ring-width);
  outline-style: var(--_ring-style);
  outline-offset: var(--_ring-offset);
}

.btn--outlined:where(.se__btn.se__btn__main.btn) {
  background-color: hsl(0deg 0% 100%); /* white */
}

/* * Shapes (component prop "shape")   */
.btn--rounded:where(.se__btn.se__btn__main.btn) {
  border-radius: var(--_rounded-border-radius);
}

.btn--circle:where(.se__btn.se__btn__main.btn) {
  padding: var(--_circle-p);
  border-radius: 50%;
}

/* * Borders (component prop "border") */
.btn--border-solid:where(.se__btn.se__btn__main.btn) {
  border-style: solid;
}

.btn--border-dashed:where(.se__btn.se__btn__main.btn) {
  border-style: dashed;
}

.btn--border-dotted:where(.se__btn.se__btn__main.btn) {
  border-style: dotted;
}

.btn--border-double:where(.se__btn.se__btn__main.btn) {
  border-style: double;
}

.btn--border-hidden:where(.se__btn.se__btn__main.btn) {
  border-style: hidden;
}

.btn--border-none:where(.se__btn.se__btn__main.btn) {
  border-style: none;
}

/* * Sizes (component prop "size")     */
.btn--xs:where(.se__btn.se__btn__main.btn) {
  --_font-size: var(--_font-size-xs);
  --_font-weight: var(--_font-weight-xs);
  --_line-height: var(--_line-height-xs);
  --_letter-spacing: var(--_letter-spacing-xs);
}

.btn--sm:where(.se__btn.se__btn__main.btn) {
  --_font-size: var(--_font-size-sm);
  --_font-weight: var(--_font-weight-sm);
  --_line-height: var(--_line-height-sm);
  --_letter-spacing: var(--_letter-spacing-sm);
}

.btn--base:where(.se__btn.se__btn__main.btn) {
  --_font-size: var(--_font-size-base);
  --_font-weight: var(--_font-weight-base);
  --_line-height: var(--_line-height-base);
  --_letter-spacing: var(--_letter-spacing-base);
}

.btn--lg:where(.se__btn.se__btn__main.btn) {
  --_font-size: var(--_font-size-lg);
  --_font-weight: var(--_font-weight-lg);
  --_line-height: var(--_line-height-lg);
  --_letter-spacing: var(--_letter-spacing-lg);
}

.btn--xl:where(.se__btn.se__btn__main.btn) {
  --_font-size: var(--_font-size-xl);
  --_font-weight: var(--_font-weight-xl);
  --_line-height: var(--_line-height-xl);
  --_letter-spacing: var(--_letter-spacing-xl);
}

.btn--full:where(.se__btn.se__btn__main.btn) {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

/* * Variants (component prop "type")  */

/* - default - */
:is(.btn--default, .btn--default-outlined):where(.se__btn.se__btn__main.btn) {
  border-color: var(--_border-color);
  outline: none;
}

.btn--default-focus:focus:where(.se__btn.se__btn__main.btn) {
  --_ring-color: var(--ring-color, hsl(240deg 5% 84%)); /* zync-300 */
  outline-color: var(--_ring-color);
}

/* - primary - */
.btn--primary:where(.se__btn.se__btn__main.btn) {

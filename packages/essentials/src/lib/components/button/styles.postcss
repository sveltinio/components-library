@charset "UTF-8";

/* stylelint-disable declaration-empty-line-before */
@layer components {
  a:is(.sn-e-c-button) {
    text-decoration: var(--text-decoration, none);
  }

  button:is(.sn-e-c-button) {
    cursor: var(--cursor, pointer);

    &:disabled,
    &[disabled] {
      color: var(--gray-5);
      background-color: var(--gray-3);
      outline-color: var(--gray-4);
      border-color: var(--gray-4);
      cursor: not-allowed;
    }

    @media screen and (-ms-high-contrast: active) {
      border: var(--border-size-2) solid currentcolor;
    }
  }

  .sn-e-c-button {
    --_min-w: var(--min-w, 10ch);
    --_min-h: var(--min-h, var(--size-8));
    --_px: var(--pr, var(--size-3));
    --_py: var(--pt, var(--size-1));
    --_font-size: var(--font-size, var(--font-size-1));
    --_font-weight: var(--font-weight, var(--font-weight-4));
    --_line-height: var(--line-height, var(--font-lineheight-3));
    --_letter-spacing: var(--letter-spacing, var(--font-letterspacing-1));
    --_text-decoration-line: var(--text-decoration-line, none);
    --_border-color: var(--border-color, var(--stone-2));
    --_border-width: var(--border-width, var(--border-size-1));
    --_bg-color: var(--bg-color, var(--stone-1));
    --_bg-color-hover: var(--bg-color-hover, var(--stone-1));
    --_outline-width: var(--outline-width, 0.125rem);
    --_outline-style: var(--outline-style, solid);
    --_outline-color: var(--outline-color, transparent);
    --_outline-offset: var(--outline-offset, 0.125rem);
    --_transition-property: var(--transition-property, background-color);
    --_transition-duration: var(--transition-duration, 300ms);
    --_transition-timing-function: var(--transition-timing-function, cubic-bezier(0.4, 0, 0.2, 1));

    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: var(--_min-w);
    min-height: var(--_min-h);
    padding: var(--_py) var(--_px);
    color: var(--_color);
    border-width: var(--_border-width);
    border-color: var(--_border-color);
    background-color: var(--_bg-color);
    font-family: inherit;
    font-size: var(--_font-size);
    font-weight: var(--_font-weight);
    line-height: var(--_line-height);
    letter-spacing: var(--_letter-spacing);
    text-decoration-line: var(--_text-decoration-line);
    transition: var(--_transition-property) var(--_transition-duration)
      var(--_transition-timing-function);

    &:hover,
    &:hover:enabled {
      background-color: var(--_bg-color-hover);
    }

    &:focus,
    &:focus-visible {
      outline-width: var(--_outline-width);
      outline-style: var(--_outline-style);
      outline-offset: var(--_outline-offset);
      outline-color: var(--_outline-color);
    }

    & .button__icon {
      width: 0.9em;
      height: 0.9em;
      fill: currentcolor;
    }

    &:where(:has(.button__icon)) {
      --_icon-gap: var(--icon-gap, 0.5em);
      gap: var(--_icon-gap);
    }

    &:where(:not(:has(.button__icon))) {
      text-align: center;
      min-inline-size: var(--_min-w);
    }

    /* * Variants (component prop "variant")  * */
    &[data-variant*="outlined"] {
      --_bg-color: var(--white);
    }

    /* - default & default-outlined - */
    &[data-variant="default"],
    &[data-variant="default-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--default-ring-color, var(--gray-4));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--default-color-hover, var(--gray-11));
        --_bg-color-hover: var(--default-bg-color-hover, var(--gray-2));
      }
    }

    &[data-variant="default"] {
      --_color: var(--default-color, var(--gray-11));
      --_bg-color: var(--default-bg-color, var(--gray-1));
      --_border-color: var(--default-border-color, var(--gray-3));
    }

    &[data-variant="default-outlined"] {
      --_color: var(--default-outlined-color, var(--gray-9));
      --_border-color: var(--default-outlined-border-color, var(--gray-5));
    }

    /* - primary & primary-outlined - */
    &[data-variant="primary"],
    &[data-variant="primary-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--primary-ring-color, var(--cyan-8));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--primary-color-hover, var(--gray-0));
        --_bg-color-hover: var(--primary-bg-color-hover, var(--cyan-8));
      }
    }

    &[data-variant="primary"] {
      --_color: var(--primary-color, var(--gray-0));
      --_bg-color: var(--primary-bg-color, var(--cyan-9));
      --_border-color: var(--primary-border-color, var(--cyan-8));
    }

    &[data-variant="primary-outlined"] {
      --_color: var(--primary-outlined-color, var(--cyan-10));
      --_border-color: var(--primary-outlined-border-color, var(--cyan-8));
    }

    /* - secondary & secondary-outline - */
    &[data-variant="secondary"],
    &[data-variant="secondary-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--secondary-ring-color, var(--indigo-8));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--secondary-color-hover, var(--gray-0));
        --_bg-color-hover: var(--secondary-bg-color-hover, var(--indigo-8));
      }
    }

    &[data-variant="secondary"] {
      --_color: var(--secondary-color, var(--gray-0));
      --_bg-color: var(--secondary-bg-color, var(--indigo-9));
      --_border-color: var(--secondary-border-color, var(--indigo-8));
    }

    &[data-variant="secondary-outlined"] {
      --_color: var(--secondary-outlined-color, var(--indigo-10));
      --_border-color: var(--secondary-outlined-border-color, var(--indigo-8));
    }

    /* - success & success-outlined - */
    &[data-variant="success"],
    &[data-variant="success-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--success-ring-color, var(--green-8));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--success-color-hover, var(--gray-0));
        --_bg-color-hover: var(--success-bg-color-hover, var(--green-9));
      }
    }

    &[data-variant="success"] {
      --_color: var(--success-color, var(--gray-0));
      --_bg-color: var(--success-bg-color, var(--green-10));
      --_border-color: var(--success-border-color, var(--green-8));
    }

    &[data-variant="success-outlined"] {
      --_color: var(--success-outlined-color, var(--green-10));
      --_border-color: var(--success-outlined-border-color, var(--green-8));
    }

    /* - error & error-outlined - */
    &[data-variant="error"],
    &[data-variant="error-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--error-ring-color, var(--red-8));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--error-color-hover, var(--gray-0));
        --_bg-color-hover: var(--error-bg-color-hover, var(--red-8));
      }
    }

    &[data-variant="error"] {
      --_color: var(--error-color, var(--gray-0));
      --_bg-color: var(--error-bg-color, var(--red-9));
      --_border-color: var(--error-border-color, var(--red-8));
    }

    &[data-variant="error-outlined"] {
      --_color: var(--error-outlined-color, var(--red-10));
      --_border-color: var(--error-outlined-border-color, var(--red-8));
    }

    /* - warning & warning-outlined - */
    &[data-variant="warning"],
    &[data-variant="warning-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--warning-ring-color, var(--orange-8));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--warning-color-hover, var(--gray-0));
        --_bg-color-hover: var(--warning-bg-color-hover, var(--orange-9));
      }
    }

    &[data-variant="warning"] {
      --_color: var(--warning-color, var(--gray-0));
      --_bg-color: var(--warning-bg-color, var(--orange-10));
      --_border-color: var(--warning-border-color, var(--orange-8));
    }

    &[data-variant="warning-outlined"] {
      --_color: var(--warning-color, var(--orange-10));
      --_border-color: var(--warning-outlined-border-color, var(--orange-8));
    }

    /* - info & info-outlined - */
    &[data-variant="info"],
    &[data-variant="info-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--info-ring-color, var(--blue-9));
      }

      &:hover,
      &:hover:enabled {
        --_color: var(--info-color-hover, var(--gray-0));
        --_bg-color-hover: var(--info-bg-color-hover, var(--blue-9));
      }
    }

    &[data-variant="info"] {
      --_color: var(--info-color, var(--gray-0));
      --_bg-color: var(--info-bg-color, var(--blue-9));
      --_border-color: var(--info-border-color, var(--blue-8));
    }

    &[data-variant="info-outlined"] {
      --_color: var(--info-outlined-color, var(--blue-10));
      --_border-color: var(--info-outlined-border-color, var(--blue-8));
    }

    /* - ghost & ghot-outlined - */
    &[data-variant="ghost"],
    &[data-variant="ghost-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--ghost-ring-color, var(--stone-9));
      }

      &:hover,
      &:hover:hover {
        --_color: var(--neutral-color-hover, var(--stone-10));
        --_bg-color-hover: var(--ghost-bg-color-hover, var(--stone-1));
      }
    }

    &[data-variant="ghost"] {
      --_color: var(--ghost-color, var(--stone-10));
      --_bg-color: var(--neghostutral-bg-color, var(--stone-0));
      --_border-color: var(--ghost-border-color, transparent);
    }

    &[data-variant="ghost-outlined"] {
      --_color: var(--ghost-outlined-color, var(--stone-10));
      --_border-color: var(--ghost-outlined-border-color, var(--stone-2));

      &:hover,
      &:hover:hover {
        --_color: var(--neutral-color-hover, var(--stone-10));
        --_bg-color-hover: var(--ghost-bg-color-hover, var(--stone-1));
      }
    }

    /* - neutral & neutral-outlined - */
    &[data-variant="neutral"],
    &[data-variant="neutral-outlined"] {
      &:focus,
      &:focus-visible {
        --_outline-color: var(--neutral-ring-color, var(--stone-10));
      }

      &:hover,
      &:hover:hover {
        --_color: var(--neutral-color-hover, var(--gray-0));
        --_bg-color-hover: var(--neutral-bg-color-hover, var(--stone-10));
      }
    }

    &[data-variant="neutral"] {
      --_color: var(--neutral-color, var(--gray-0));
      --_bg-color: var(--neutral-bg-color, var(--stone-11));
      --_border-color: var(--neutral-border-color, var(--stone-11));
    }

    &[data-variant="neutral-outlined"] {
      --_color: var(--neutral-outlined-color, var(--stone-11));
      --_border-color: var(--neutral-outlined-border-color, var(--stone-9));
    }

    /* * Sizes (component prop "size")     * */

    /* - xs - */
    &[data-size="xs"] {
      --_font-size: var(--font-size-xs, var(--font-size-0));
      --_line-height: var(--line-height-xs, var(--font-lineheight-00));
      --_letter-spacing: var(--letter-spacing-xs, var(--font-letterspacing-0));
    }

    /* - sm - */
    &[data-size="sm"] {
      --_font-size: var(--font-size-sm, calc(var(--font-size-0) + 0.1) rem);
      --_line-height: var(--line-height-sm, var(--font-lineheight-1));
      --_letter-spacing: var(--letter-spacing-sm, var(--font-letterspacing-1));
    }

    /* - base - */
    &[data-size="base"] {
      --_font-size: var(--font-size-base, var(--font-size-1));
      --_line-height: var(--line-height-base, var(--font-lineheight-2));
      --_letter-spacing: var(--letter-spacing-base, var(--font-letterspacing-1));
    }

    /* - lg - */
    &[data-size="lg"] {
      --_font-size: var(--font-size-lg, var(--font-size-2));
      --_line-height: var(--line-height-lg, var(--font-lineheight-4));
      --_letter-spacing: var(--letter-spacing-lg, var(--_letter-spacing-base));
    }

    /* - xl - */
    &[data-size="xl"] {
      --_font-size: var(--font-size-xl, var(--font-size-3));
      --_line-height: var(--line-height-xl, var(--font-lineheight-4));
      --_letter-spacing: var(--letter-spacing-xl, var(--_letter-spacing-lg));
    }

    /* * Shapes (component prop "shape")   * */

    /* - flat - */
    &[data-shape="flat"] {
      border-radius: var(--radius-0);
    }

    /* - rounded - */
    &[data-shape="rounded"] {
      border-radius: var(--rounded-border-radius, var(--radius-2));
    }

    /* - pill - */
    &[data-shape="pill"] {
      border-radius: var(--pill-border-radius, var(--radius-5));
    }

    /* - circle - */
    &[data-shape="circle"] {
      min-width: var(--size-8);
      min-height: var(--size-8);
      width: var(--size-8);
      height: var(--size-8);
      border-radius: var(--radius-round);
      aspect-ratio: var(--ratio-square);

      & > * {
        width: 100%;
        height: 100%;
        fill: currentcolor;
      }
    }

    /* * Borders (component prop "border") * */

    /* - none - */
    &[data-border="none"] {
      border-style: none;
    }

    /* - hidden - */
    &[data-border="hidden"] {
      border-style: hidden;
    }

    /* - dotted - */
    &[data-border="dotted"] {
      border-style: dotted;
    }

    /* - dashed - */
    &[data-border="dashed"] {
      border-style: dashed;
    }

    /* - solid - */
    &[data-border="solid"] {
      border-style: solid;
    }

    /* - double - */
    &[data-border="double"] {
      border-style: double;
    }

    /* - groove - */
    &[data-border="groove"] {
      border-style: groove;
    }

    /* - ridge - */
    &[data-border="ridge"] {
      border-style: ridge;
    }

    /* - inset - */
    &[data-border="inset"] {
      border-style: inset;
    }

    /* - outset - */
    &[data-border="outset"] {
      border-style: outset;
    }

    /* - initial - */
    &[data-border="initial"] {
      border-style: initial;
    }

    /* - inherit - */
    &[data-border="inherit"] {
      border-style: inherit;
    }

    /* ************************************* */

    /* - block - */
    &[data-block="true"] {
      width: 100%;
      overflow: hidden;
    }

    /* - focus ring - */
    &[data-no-focus-ring="true"]:focus {
      outline-color: transparent;
    }
  }
}

  --_bg-color: var(--_primary-bg-color);
  --_border-color: var(--_primary-border-color);

  &:hover {
    --_bg-color-hover: var(--_primary-bg-color-hover);
  }
}

.btn--primary-focus:focus:where(.se__btn.se__btn__main.btn) {

{
	"name": "components-library",
	"version": "0.2.0",
	"private": true,
	"packageManager": "pnpm@7.17.1",
	"workspaces": [
		"packages/*",
		"sites/*"
	],
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=16.0.0"
	},
	"scripts": {
		"dev": "turbo run dev",
		"demo": "turbo run demo",
		"test": "turbo run test --concurrency=2 --force",
		"build": "pnpm clean && pnpm build:packages && pnpm build:sites",
		"build:packages": "turbo run build --filter='@sveltinio/*' --concurrency=2 --force",
		"build:sites": "turbo run build --filter='components.sveltin.io'",
		"format": "turbo run format",
		"lint": "turbo run lint",
		"check": "turbo run check",
		"clean": "turbo run clean",
		"prepare": "husky install",
		"plop": "plop",
		"release": "pnpm -r publish packages  --access public",
		"changeset:version": "changeset version && pnpm install --lockfile-only"
	},
	"devDependencies": {
		"@changesets/changelog-git": "^0.1.14",
		"@changesets/cli": "^2.26.0",
		"@commitlint/cli": "^17.4.1",
		"@commitlint/config-conventional": "^17.4.0",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@types/gtag.js": "^0.0.12",
		"@types/node": "^18.11.18",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"plop": "^3.1.1",
		"prettier": "^2.8.2",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.2",
		"svelte-preprocess": "^5.0.0",
		"turbo": "^1.7.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vitest": "^0.27.1"
	}
}

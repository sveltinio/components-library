{
	"name": "components-library",
	"version": "0.2.0",
	"private": true,
	"packageManager": "pnpm@8.2.0",
	"workspaces": [
		"packages/*",
		"sites/*"
	],
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=16.0.0"
	},
	"scripts": {
		"dev": "turbo run dev",
		"demo": "turbo run demo",
		"test": "turbo run test --concurrency=2 --force",
		"test:packages": "turbo run test --filter='@sveltinio/*' --concurrency=2 --force",
		"build": "pnpm clean && pnpm build:packages && pnpm build:sites",
		"build:packages": "turbo run build --filter='@sveltinio/*' --concurrency=2 --force",
		"build:sites": "turbo run build --filter='components.sveltin.io'",
		"format": "turbo run format",
		"lint": "turbo run lint",
		"check": "turbo run check",
		"clean": "turbo run clean",
		"prepare": "husky install",
		"plop": "plop",
		"release": "pnpm -r publish packages  --access public",
		"changeset:version": "changeset version && pnpm install --lockfile-only"
	},
	"devDependencies": {
		"@changesets/changelog-git": "^0.1.14",
		"@changesets/cli": "^2.26.1",
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"picocolors": "^1.0.0",
		"plop": "^3.1.2",
		"turbo": "^1.9.3"
	}
}
